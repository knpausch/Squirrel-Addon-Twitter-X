[
    {
        "type": "Accordion",
        "properties": {
            "name": "General",
            "collapsed": false
        },
        "children": [
            {
                "type": "Dropdown",
                "properties": {
                    "labelName": "Style",
                    "options": [
                        {
                            "option": "",
                            "text": "Please Select"
                        },
                        {
                            "option": "singlePost",
                            "text": "Single Post"
                        },
                        {
                            "option": "timeline",
                            "text": "Timeline"
                        }
                    ],
                    "bindingPropertyName": "styleType"
                }
            },
            {
                "type": "ConditionalBlock",
                "properties": {
                    "bindingPropertyName": "styleType",
                    "equals": "singlePost"
                },
                "children": [
                    {
                        "type": "InputBox",
                        "properties": {
                            "labelName": "X Post URL:",
                            "allowBinding": true,
                            "allowManualEntry": true,
                            "spellcheck": false,
                            "type": "Text",
                            "liveUpdate": true,
                            "bindingPropertyName": "postURL"
                        }
                    }
                ]
            },
            {
                "type": "ConditionalBlock",
                "properties": {
                    "bindingPropertyName": "styleType",
                    "equals": "timeline"
                },
                "children": [
                    {
                        "type": "InputBox",
                        "properties": {
                            "labelName": "X Username:",
                            "allowBinding": true,
                            "allowManualEntry": true,
                            "spellcheck": false,
                            "type": "Text",
                            "liveUpdate": true,
                            "bindingPropertyName": "xUsername"
                        }
                    }
                ]
            }          
        ]
    }
]